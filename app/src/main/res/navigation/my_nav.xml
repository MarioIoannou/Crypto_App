<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav.xml"
    app:startDestination="@id/coinFragment">

    <fragment
        android:id="@+id/coinFragment"
        android:name="com.marioioannou.cryptocurrencyapp.ui.fragments.CoinFragment"
        android:label=""
        tools:layout="@layout/fragment_coin" >
        <action
            android:id="@+id/action_coinFragment_to_coinDetailFragment"
            app:destination="@id/coinDetailFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right"/>
        <action
            android:id="@+id/action_coinFragment_to_trendingCoinDetailFragment"
            app:destination="@id/trendingCoinDetailFragment" />
        <action
            android:id="@+id/action_coinFragment_to_searchingFragment"
            app:destination="@id/searchingFragment" />
    </fragment>
    <fragment
        android:id="@+id/moreFragment"
        android:name="com.marioioannou.cryptocurrencyapp.ui.fragments.MoreFragment"
        android:label=""
        tools:layout="@layout/fragment_more" />
    <fragment
        android:id="@+id/watchlistFragment"
        android:name="com.marioioannou.cryptocurrencyapp.ui.fragments.WatchlistFragment"
        android:label=""
        tools:layout="@layout/fragment_watchlist" >
        <action
            android:id="@+id/action_watchlistFragment_to_coinDetailFragment"
            app:destination="@id/coinDetailFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right"/>
        <action
            android:id="@+id/action_watchlistFragment_to_trendingCoinDetailFragment"
            app:destination="@id/trendingCoinDetailFragment" />
        <action
            android:id="@+id/action_watchlistFragment_to_searchingFragment"
            app:destination="@id/searchingFragment" />
    </fragment>
    <fragment
        android:id="@+id/newsFragment"
        android:name="com.marioioannou.cryptocurrencyapp.ui.fragments.NewsFragment"
        android:label=""
        tools:layout="@layout/fragment_news" >
        <action
            android:id="@+id/action_newsFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
    </fragment>
    <fragment
        android:id="@+id/coinDetailFragment"
        android:name="com.marioioannou.cryptocurrencyapp.ui.fragments.CoinDetailFragment"
        android:label=""
        tools:layout="@layout/fragment_coin_detail">
<!--        <argument-->
<!--            android:name="coin"-->
<!--            app:argType="com.marioioannou.cryptocurrencyapp.model.crypto.Cryptocoin" />-->
        <argument
            android:name="coin"
            app:argType="com.marioioannou.cryptocurrencyapp.coin_data.model.crypto.CryptoCoin" />
    </fragment>
    <fragment
        android:id="@+id/articleFragment"
        android:name="com.marioioannou.cryptocurrencyapp.ui.fragments.ArticleFragment"
        android:label="fragment_article"
        tools:layout="@layout/fragment_article" />
    <fragment
        android:id="@+id/trendingCoinDetailFragment"
        android:name="com.marioioannou.cryptocurrencyapp.TrendingCoinDetailFragment"
        android:label="fragment_trending_coin_detail"
        tools:layout="@layout/fragment_trending_coin_detail" >
        <argument
            android:name="trend"
            app:argType="com.marioioannou.cryptocurrencyapp.coin_data.model.trending_coins.Item" />
    </fragment>
    <fragment
        android:id="@+id/searchingFragment"
        android:name="com.marioioannou.cryptocurrencyapp.SearchingFragment"
        android:label="fragment_searching"
        tools:layout="@layout/fragment_searching" />
</navigation>